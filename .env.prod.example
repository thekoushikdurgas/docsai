# ============================================================================
# Django DocsAI - Production / EC2 Environment Template
# ============================================================================
#
# Copy to .env.prod on the server and fill in real values:
#   cp .env.prod.example .env.prod
#
# Used by: systemd gunicorn.service (EnvironmentFile=/var/www/docsai/.env.prod)
# Validate: python manage.py validate_env && python manage.py check --deploy
#
# Target: EC2 Ubuntu at 34.201.10.84 (or your domain)
# ============================================================================

# ----------------------------------------------------------------------------
# REQUIRED: Django
# ----------------------------------------------------------------------------
SECRET_KEY=change-me-generate-with-python-c-get_random_secret_key
DEBUG=False
ALLOWED_HOSTS=34.201.10.84,localhost,127.0.0.1
DJANGO_ENV=production

# ----------------------------------------------------------------------------
# REQUIRED: Database (PostgreSQL for production)
# ----------------------------------------------------------------------------
DATABASE_ENGINE=postgresql
DATABASE_NAME=docsai
DATABASE_USER=docsai_user
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ----------------------------------------------------------------------------
# OPTIONAL: AWS S3 (static/media). If unset, WhiteNoise + local media used.
# ----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# ----------------------------------------------------------------------------
# OPTIONAL: Lambda / AI
# ----------------------------------------------------------------------------
# LAMBDA_AI_API_URL=
# LAMBDA_AI_API_KEY=
# OPENAI_API_KEY=
# GEMINI_API_KEY=

# ----------------------------------------------------------------------------
# OPTIONAL: Appointment360 GraphQL
# ----------------------------------------------------------------------------
# Note: Authentication uses JWT tokens from login sessions (no API key required)
# APPOINTMENT360_GRAPHQL_URL=
# GRAPHQL_AUTH_ENABLED=True

# ----------------------------------------------------------------------------
# OPTIONAL: Redis (Django-Q, cache). Default: ORM + LocMemCache.
# ----------------------------------------------------------------------------
# USE_REDIS_CACHE=False
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# OPTIONAL: Logging & app
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
USE_LOCAL_JSON_FILES=True
