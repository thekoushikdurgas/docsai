# ============================================================================
# Django Docs AI Agent - Environment Variables Configuration
# ============================================================================
# 
# Copy this file to .env and fill in your actual values
#   cp .env.example .env
#
# Run validation after setup:
#   python manage.py validate_env
#
# ============================================================================

# ----------------------------------------------------------------------------
# REQUIRED: Django Settings
# ----------------------------------------------------------------------------
# Generate a secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment selection (development/staging/production/testing)
DJANGO_ENV=development

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# For development: Use SQLite (default, no configuration needed)
# For production: Set DATABASE_ENGINE=postgresql and configure below

# Database engine: 'sqlite' (default) or 'postgresql'
DATABASE_ENGINE=sqlite

# PostgreSQL configuration (only needed if DATABASE_ENGINE=postgresql)
# DATABASE_NAME=docsai
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# ----------------------------------------------------------------------------
# RECOMMENDED: AWS S3 Configuration (for file storage)
# ----------------------------------------------------------------------------
# Required for S3 integration features (documentation uploads, file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name
S3_DATA_PREFIX=data/
S3_DOCUMENTATION_PREFIX=documentation/

# ----------------------------------------------------------------------------
# RECOMMENDED: Lambda API Endpoints
# ----------------------------------------------------------------------------
# Required for external documentation and AI API integration
LAMBDA_DOCUMENTATION_API_URL=https://your-api.execute-api.us-east-1.amazonaws.com
LAMBDA_DOCUMENTATION_API_KEY=your-documentation-api-key
LAMBDA_AI_API_URL=https://your-ai-api.execute-api.us-east-1.amazonaws.com
LAMBDA_AI_API_KEY=your-ai-api-key

# ----------------------------------------------------------------------------
# OPTIONAL: Redis Configuration (DISABLED by default - using Local Memory Cache)
# ----------------------------------------------------------------------------
# Cache uses Django LocMemCache (per-process, no Redis) unless enabled below.
# To use Redis: set USE_REDIS_CACHE=True and configure Redis settings.
# USE_REDIS_CACHE=False
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_URL=redis://localhost:6379/0  # Alternative to host/port/db

# ----------------------------------------------------------------------------
# OPTIONAL: OpenAI Configuration
# ----------------------------------------------------------------------------
# Required for AI chat features (falls back to Lambda AI API if not set)
OPENAI_API_KEY=your-openai-api-key

# ----------------------------------------------------------------------------
# OPTIONAL: Google Gemini Configuration
# ----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key

# ----------------------------------------------------------------------------
# OPTIONAL: Appointment360 GraphQL Configuration
# ----------------------------------------------------------------------------
# Note: Authentication uses JWT tokens from login sessions (no API key required)
APPOINTMENT360_GRAPHQL_URL=http://localhost:8000/graphql
GRAPHQL_AUTH_ENABLED=True
S3_AUTH_STORAGE_ENABLED=False

# ----------------------------------------------------------------------------
# OPTIONAL: Django-Q Configuration
# ----------------------------------------------------------------------------
# Django-Q worker and task queue settings (defaults shown)
DJANGO_Q_WORKERS=4
DJANGO_Q_RECYCLE=500
DJANGO_Q_TIMEOUT=300
DJANGO_Q_RETRY=300
DJANGO_Q_QUEUE_LIMIT=50
DJANGO_Q_BULK=10
DJANGO_Q_SAVE_LIMIT=250
DJANGO_Q_ERROR_LIMIT=250

# ----------------------------------------------------------------------------
# OPTIONAL: Email Configuration
# ----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# ----------------------------------------------------------------------------
# OPTIONAL: Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# OPTIONAL: Application Settings
# ----------------------------------------------------------------------------
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
USE_LOCAL_JSON_FILES=True
