# Django DocsAI Agent - Environment Configuration

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost:5432/docsai

# Local JSON Files Configuration
# Set to True to use local JSON files from media/ directory as primary data source
USE_LOCAL_JSON_FILES=True

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=contact360docs
S3_DATA_PREFIX=data/
S3_DOCUMENTATION_PREFIX=documentation/

# Lambda API Configuration
LAMBDA_DOCUMENTATION_API_URL=https://94hucnirj2.execute-api.us-east-1.amazonaws.com
LAMBDA_DOCUMENTATION_API_KEY=your-lambda-api-key
LAMBDA_DOCUMENTATION_API_TIMEOUT=10
LAMBDA_AI_API_URL=https://aziwa531nl.execute-api.us-east-1.amazonaws.com
LAMBDA_AI_API_KEY=your-lambda-ai-api-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key

# Appointment360 GraphQL Configuration
# Note: Authentication uses JWT tokens from login sessions (no API key required)
APPOINTMENT360_GRAPHQL_URL=http://34.229.94.175/graphql
GRAPHQL_TIMEOUT=30
GRAPHQL_ENABLED=False

# Email Configuration (for password reset, etc.)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Security
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Logging
LOG_LEVEL=INFO
